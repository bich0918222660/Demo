<!DOCTYPE HTML>
<HTML>
<HEAD>
    <meta charset="UTF-8">
    <title>Admin Page</title>
    <meta name="author" content="Trieu Ngoc Bich">

    <!-- jQuery -->
    <script src="../js/jquery.min.js"></script>

    <!-- jQuery Validation -->
    <script src="../js/jquery.validate.min.js"></script>

    <!-- jQuery UI -->
    <link href="../css/jquery-ui.min.css" rel="stylesheet" />
    <script src="../js/jquery-ui.min.js"></script>

    <!-- Bootstrap -->
    <link href="../css/bootstrap3.min.css" rel="stylesheet" />
    <script src="../js/bootstrap3.min.js"></script>

    <style>
        body {
            font-size: 16px;
        }

        /* header */
        .h-info {
            background-color: white;
            color: black;
            width: 100%;
            height: 140px;
            box-shadow: 0px 0px 5px #ccc;
        }

        .h-left {
            width: 40%;
            font-size: 35px;
            font-weight: bold;
            float: left;
            margin-top: 15px;
        }

        .h-logo {
            height: 80px;
            width: 65%;
            margin-top: 10px;
            margin-left: 50px;
        }

        .h-right {
            width: 60%;
            float: right;
            margin-top: 20px;
        }

        .h-icon {
            width: 20px;
            height: 20px;
            color: #ff0066;
            margin-left: 10px;
        }


        .affix {
            top: 20px;
            width: 15%;
            z-index: 9999 !important;
        }
        .carousel-inner img {
            width: 100%;
            height: 250px;
        }

        /* NAV */
        .sidenav {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 20px;
        }

        /* Style the sidenav links and the dropdown button */
        .sidenav a, .dropdown-btn {
            padding: 6px 8px 6px 16px;
            text-decoration: none;
            font-size: 20px;
            color: #818181;
            display: block;
            border: none;
            background: none;
            width: 100%;
            text-align: left;
            cursor: pointer;
            outline: none;
        }

        /* On mouse-over */
        .sidenav a:hover, .dropdown-btn:hover {
            color: #f1f1f1;
        }

        /* Main content */
        .main {
            margin-left: 200px; /* Same as the width of the sidenav */
            font-size: 20px; /* Increased text to enable scrolling */
            padding: 0px 10px;
        }

        /* Add an active class to the active dropdown button */
        .active {
            background-color: green;
            color: white;
        }

        /* Dropdown container (hidden by default). Optional: add a lighter background color and some left padding to change the design of the dropdown content */
        .dropdown-container {
            display: none;
            background-color: #262626;
            padding-left: 8px;
        }

        /* Optional: Style the caret down icon */
        .fa-caret-down {
            float: right;
            padding-right: 8px;
        }

        /* Some media queries for responsiveness */
        @media screen and (max-height: 450px) {
            .sidenav {padding-top: 15px;}
            .sidenav a {font-size: 18px;}
        }

        /* Form */
        .form-title {
            width: 40%;
            font-size: 30px;
            font-weight: bold;
            margin: auto;
            text-align: center;
            padding: 10px;
            margin-bottom: 10px;
            border-top: 1px solid #ff0066;
            border-bottom: 1px solid #ff0066;
            margin-bottom: 40px;
        }
        .form-manage {
            width: 80%;
            margin: auto;
        }

        /* footer */
        footer {
            background-color: #ffe6f2;
            color: black;
            padding: 2%;
        }
    </style>
</HEAD>
<BODY data-spy="scroll" data-target="#myScrollspy" data-offset="15">

<div class="row">
    <div class="col-sm-2">
        <% include admin_layout/nav.ejs %>
    </div>
    <div class="col-sm-10">
        <br/>

        <div class="form-manage">
            <h1 class="form-title">Danh sách sản phẩm</h1>

            <% if(message != "") { %>
            <div class="alert alert-danger" role="alert">
                <%= message %>
            </div>
            <%
            } %>
            <table class="table table-striped">
                <tr>
                    <th>Tài khoản</th>
                    <th>Họ và tên</th>
                    <th>Giới tính</th>
                    <th>Điện thoại</th>
                    <th>Email</th>
                    <th></th>
                </tr>
                <% employees.forEach(function (i) {
                    if(i.type == 1) { %>
                <tr>
                    <td><%= i.username %></td>
                    <td><%= i.fullname %></td>
                    <td><%= i.sex %></td>
                    <td><%= i.phone %></td>
                    <td><%= i.email %></td>
                    <td>
                        <a onclick="return confirm('Bạn thực sự muốn xoá tài khoản nhân viên <%= i.username %>?')" href="/delete-employee/username=<%= i.username %>&password=<%= i.password %>">Remove</a>
                    </td>
                </tr>
                <%
                } }); %>
            </table>

        </div>
        <br/><br/>

        <% include admin_layout/footer %>
    </div>
</div>
</BODY>
</HTML>